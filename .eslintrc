{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": "off",
    "prop-types": 0,
    "no-unused-vars": 0,
    "no-undef": 0,
    "no-console": "off",
    "react/no-unused-prop-types": "off",
    "arrow-parens": "off",
    "class-methods-use-this": "off",
    "react/self-closing-comp": 0,
    "no-underscore-dangle": 0,
    "react/sort-comp": 0,
    "import/prefer-default-export": "off",
    "no-use-before-define": "off",
    "import/no-named-as-default": 0    
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
	allowImportExportEverywhere: true,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "plugins": ["react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "eslint-config-airbnb",
    "prettier",
    "prettier/react"
  ]
}
